// 分类首页

.cate-folder
  width: 100%
  height: 2em
  margin: 1em 0
  line-height: 2em
  #child-folder
    display: inline

#cate-list
  display: grid
  grid-template-columns: repeat(4, 1fr)
  grid-gap: 0.75em
  justify-items: center
  .cate-item
    width: 100%
    padding: 0.875em 0
    background-color: var(--trans-back-color)
    display: grid
    grid-template-rows: 3em 1.5em
    justify-items: center
    align-items: center
    i
      font-size: 3em
      color: var(--hover-text-color)
      &[onclick]
        cursor: pointer
    a
      width: 100%
      text-align: center