// 导航栏
header
  width: 100%
  height: 48px
  background-color: #3F3B3A
  box-shadow: 0 2px 2px rgba(255, 255, 255, 0.5)
  float: left
  position: fixed
  z-index: 9999
  .outer
    width: 1000px
    height: 100%
    margin: 0 auto
  .inner
    line-height: 48px
    float: left
    padding-left: 10px
    padding-right: 10px
    a
      color: #bbff33
    .logo-wrap
      margin-top: -0.3em
    .main-nav
      .dropdown
        display: inline-block
        float: left
        &:hover
          background-color: #2E2B2B
          color: #0ff
          .dropdown-content
            display: block
            -webkit-text-stroke-width: thin
        .dropbtn
          display: inline-block
          min-width: 60px
          padding: 0 10px
          text-align: center
          user-select: none
          cursor: pointer
          float: left
        .dropdown-content
          display: none
          background-color: rgba(0, 0, 0, 0.3)
          box-shadow: 0px 8px 16px 0px rgba(12, 12, 12, 0.25)
          margin-top: 48px
          position: absolute
          a
            display: block
            min-width: 60px
            padding: 0 10px
            float: none
            border-top: 1px rgba(170, 170, 170, 0.4) solid
            &:hover
              background-color: rgba(0, 0, 0, 0.3)
      a
        display: block
        min-width: 60px
        padding: 0 10px
        text-align: center
        float: left
        &:hover
          background-color: rgba(22, 22, 22, 0.4)
