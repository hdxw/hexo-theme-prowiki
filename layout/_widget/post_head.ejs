<article class="article-title">
    <h3 class="shake shake-little" title="<%= post.link?post.link:post.title %>">
        <a class="nowrap" <% if(!is_post()){ %>href="<%= url_for(post.link?post.link:post.path) %>"<% } %>>
            <% if (post.encrypt){ %>
            <i class="fas fa-lock" aria-hidden="true"></i>
            <% } %>
            <% if (post.link){ %>
            <i class="fas fa-link" aria-hidden="true"></i>
            <% } %>
            <%= post.title?post.title:'<无标题>' %>
        </a>
    </h3>
    <div class="attr-list">
        <div class="attr-item">
            <img src="<%= url_for(theme.authors[post.author]) %>" alt="head" />
            <span><%= post.author %></span>
        </div>
        <% if (post.categories && post.categories.length){ %>
            <% post.categories.each(function(cate, i){ %>
            <a class="attr-item" href="<%= url_for(cate.path) %>" target="_blank">
            <% if(i == 0){ %>
                <i class="far fa-folder-open" aria-hidden="true"></i>
            <% }else if(i > 0){ %>
                <i class="fas fa-angles-right" aria-hidden="true"></i>
            <% } %>
                <span><%= cate.name %></span>
            </a>
            <% }) %>
        <% } %>
        <div class="attr-item">
            <i class="far fa-calendar-alt" aria-hidden="true"></i>
            <span>发布于：<%= date(post.date, "YYYY年MM月DD日") %></span>
        </div>
        <div class="attr-item">
            <i class="far fa-edit" aria-hidden="true"></i>
            <span>更新于：<%= date(post.updated, "YYYY年MM月DD日") %></span>
        </div>
    </div>
    <% if (post.tags && post.tags.length > 0){ %>
    <div class="attr-list">
        <% post.tags.each(function(tag, i){ %>
        <a class="attr-item" href="<%= url_for(tag.path) %>" target="_blank">
            <i class="far fa-hashtag" aria-hidden="true"></i>
            <span><%= tag.name %></span>
        </a>
        <% }) %>
    </div>
    <% } %>
</article>